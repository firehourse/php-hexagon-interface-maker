#!/usr/bin/env php
<?php

require __DIR__ . '/../vendor/autoload.php';

use PTool\Commands\SyncRepositoryCommand;

$cmd = $argv[1] ?? null;
$file = $argv[2] ?? null;

switch ($cmd) {
    case 'sync:repo':
        (new SyncRepositoryCommand())->handle($file);
        break;

    default:
        echo "Available commands:\n";
        echo "  sync:repo {InterfaceFilePath}\n";
}
